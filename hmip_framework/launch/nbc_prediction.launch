<launch>

  <arg name="image_view" default="true" />

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />

    <param name="intrinsic_controls/focus_automatic_continuous" value="false" />
    <param name="image_width" value="1920" />
    <param name="image_height" value="1080" />
    <param name="pixel_format" value="mjpeg" />
    <param name="color_format" value="yuv422p" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" value="file://$(find srabot_launch)/config/calibration/usb_camera_calibration_1920.yaml"/>    
  </node>

  <!-- TRACKERS -->
  <node name="hand_tracker" pkg="srabot_perception" type="handtrack.py" output="screen" >
  </node>

  <node name="gaze_tracker" pkg="srabot_perception" type="eyetrack.py" output="screen" >
  </node>

  <!-- PREDICTORS -->
  <node name="predict_hand_vf" pkg="srabot_perception" type="predict_hand_vf.py" output="screen" >
     <rosparam command="load" file="$(find srabot_perception)/config/object_locations_tile.yaml" />
     <param name="beta" value="1"/>
     <param name="disc_param" value="0.05"/>
  </node>

  <node name="predict_gaze" pkg="srabot_perception" type="predict_gaze.py" output="screen" >
      <rosparam command="load" file="$(find srabot_perception)/config/object_locations_tile.yaml" />
      <param name="gaze_hit_threshold" value="0.985"/>
  </node>

  <!-- ATTENTION PERCEPTION-->
  <node name="attention_perception" pkg="srabot_perception" type="attention_perception.py" output="screen" >
     <rosparam command="load" file="$(find srabot_perception)/config/object_locations_tile.yaml" />
  </node>


 <!--node if="$(arg image_view)" name="gaze_image_view" pkg="image_view" type="image_view"
        respawn="false" output="screen">
    <remap from="image" to="/gaze_tracker/image"/>
    <param name="autosize" value="true" />
  </node>

  <node if="$(arg image_view)" name="hand_image_view" pkg="image_view" type="image_view"
        respawn="false" output="screen">
    <remap from="image" to="/hand_tracker/image"/>
    <param name="autosize" value="true" />
  </node> -->

</launch>

